<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-3 panel panel-default">
      <p id="notice"><%= notice %></p>

      <h1 class="margin-base-vertical text-center">Listing All Present Ideologies</h1>

      <table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Ideology</th>
      <th>Sentiment</th>
      <th>Rated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
        <% @judges.each do |judge| %>
            <tr>
              <td><%= judge.ideology %></td>
              <td><%= judge.sentiment %></td>
              <td><%= judge.user %></td>
              <td><%= link_to 'Edit', edit_judge_path(judge) %></td>
            </tr>
        <% end %>
  </tbody>
</table>

<br>
</div>
    </div>
  </div>