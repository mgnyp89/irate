<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-3 panel panel-default">
      <p id="notice"><%= notice %></p>

      <h1 class="margin-base-vertical text-center">Leaderboard</h1>

      <table class="table table-striped table-condensed table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Score</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <tr>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.location %></td>
              <td><%= user.score %></td>
             </tr>
        <% end %>
        </tr>
        </tbody>
      </table>

      <br>
    </div>

  </div>
</div>