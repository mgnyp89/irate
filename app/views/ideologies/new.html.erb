<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-3 panel panel-default">
      <p id="notice"><%= notice %></p>

      <h1 class="margin-base-vertical text-center">Random Quote</h1>

      <table class="table table-striped table-condensed table-hover">

        <thead>
        <tr>
          <th>Author</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <td><%= @quote.author %></td>
        <td><%= @quote.content %></td>
        </tbody>
      </table>


<%= render 'form', :quote => @quote %>

      </div>
    </div>
</div>