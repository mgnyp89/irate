<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-3 panel panel-default">
      <p id="notice"><%= notice %></p>

      <h1 class="margin-base-vertical text-center">Listing All Present Ideologies</h1>

      <table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Association</th>
      <th>Quote</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideologies.each do |ideology| %>
      <tr>
        <td><%= ideology.name %></td>
        <td><%= ideology.association_level %></td>
        <td><%= ideology.quote %></td>
        <td><%= link_to 'Edit', edit_ideology_path(ideology) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
    </div>
  </div>