<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-3 panel panel-default">
      <p id="notice"><%= notice %></p>

      <h1 class="margin-base-vertical text-center">My Data</h1>

      <table class="table table-striped table-condensed table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Sex</th>
          <th>Date of birth</th>
          <th>Location</th>
          <th>Score</th>
          <th colspan="5"></th>
        </tr>
        </thead>

        <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.sex %></td>
          <td><%= @user.dob %></td>
          <td><%= @user.location %></td>
          <td><%= @user.score %></td>
        </tr>
        </tbody>
      </table>

      <h1 class="margin-base-vertical text-center">My Ideologies</h1>

      <table class="table table-striped table-condensed table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Association</th>
          <th>Quote</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @judges.each do |judge| %>
            <tr>
              <td><%= judge.ideology %></td>
              <td><%= judge.sentiment %></td>
              <td><%= link_to 'Edit', edit_judge_path(judge) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>

  </div>
</div>