<!-- Modal -->
<div class="modal fade" id="login_page" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 style="color:red;"><span class="glyphicon glyphicon-lock"></span> Login</h4>
      </div>
      <div class="modal-body">
        <form role="form">
          <div class="form-group">
            <label for="username"><span class="glyphicon glyphicon-user">Username</span></label>
            <input type="text" class="form-control" id="username" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="psw"><span class="glyphicon glyphicon-user"> Password </span></label>
            <input type="text" class="form-control" id="psw" placeholder="Enter password">
          </div>
          <button type="submit" class="btn btn-default btn-success btn-block"><%= link_to "Login", 'Login' %></button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-default pull-left" id="cancel_login_btn" data-dismiss="modal">Cancel</button>
        <p>Not a member? <button type="button" class="btn btn-default" id="sign_up_btn">Sign Up</button></p>
      </div>
    </div>
  </div>
</div>